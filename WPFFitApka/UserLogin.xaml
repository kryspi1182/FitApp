                        </DropShadowEffect>
                    </Rectangle.Effect>
                </Rectangle>-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,0">
                    <Button Width="90" Height="40" Content="Zaloguj" FontSize="18" Click="Login"/>
                </StackPanel>


            </StackPanel>

        </Grid>
    </Grid>
